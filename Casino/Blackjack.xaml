<Window x:Class="Casino.Blackjack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casino"
        mc:Ignorable="d"
        Title="Blackjack" Height="450" Width="800">
  <Window.Background>
    <ImageBrush ImageSource="Pictures/Background.png"  Stretch="Fill"/>
  </Window.Background>
  <Grid Margin="0,0,0,-6">
    <Image Source="Pictures/blackjack/Blackjack_sign.png" Margin="116,46,116,146"/>

    <!-- Home -->
    <Button x:Name="btnHome" Background="Transparent" BorderThickness="0" Margin="294,324,294,44" Click="btnHome_Click">
      <Image Source="Pictures/blackjack/Blackjack_back.png" Height="66" Width="202"/>
    </Button>
  </Grid>
</Window>
