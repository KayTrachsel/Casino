<Window x:Class="Game.Russia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="Russia" Height="450" Width="800">
  <Window.Background>
        <ImageBrush ImageSource="Pictures/Roulette/Russ/Russ_Background.png"  Stretch="Fill"/>
  </Window.Background>
  <Grid>
        <Image Source="Pictures/Roulette/Russ/Russ_Gun.png" Margin="322,0,322,0"/>
    <Grid HorizontalAlignment="Left" Height="357" VerticalAlignment="Top" Margin="30,25,0,0">
            <Image Source="Pictures/Roulette/Russ/Russ_Chamber.png" Height="258" VerticalAlignment="Top" HorizontalAlignment="Left" Width="269"/>
      <Button Content="1" FontSize="0.1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="105,25,0,283" Click="Place_Bet" Width="42"/>
      <Button Content="2" FontSize="0.1" Background="Transparent" BorderThickness="0" Margin="171,66,55,242" Click="Place_Bet"/>
      <Button Content="3" FontSize="0.1" Background="Transparent" BorderThickness="0" Margin="172,147,54,161" Click="Place_Bet"/>
      <Button Content="4" FontSize="0.1" Background="Transparent" BorderThickness="0" Margin="105,185,121,123" Click="Place_Bet"/>
      <Button Content="5" FontSize="0.1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="33,145,0,163" Click="Place_Bet" Width="43"/>
      <Button Content="6" FontSize="0.1" Background="Transparent" BorderThickness="0" Margin="34,66,192,242" Click="Place_Bet"/>
            <Image Source="Pictures/Roulette/Russ/Russ_Select.png" Margin="55,294,56,0" Height="63" VerticalAlignment="Top"/>
    </Grid>
    <Button x:Name="btnFire" Background="Transparent" BorderThickness="0" Margin="0,25,36,0" Click="btnFire_Click" Height="258" VerticalAlignment="Top" HorizontalAlignment="Right" Width="253">
            <Image Source="Pictures/Roulette/Russ/Russ_Fire.png"/>
    </Button>

  </Grid>
</Window>
